          <MudTd DataLabel="Name">@context.Name</MudTd>
          <MudTd DataLabel="Api Object">@context.APIObjectId</MudTd>
          <MudTd DataLabel="Branchadressen">@context.Id</MudTd>
          <MudTd DataLabel="Level">@context.Category.Name</MudTd>
          <MudTd DataLabel="Status">@context.Comment</MudTd>
          <MudTd DataLabel="Webshoplink">@context.Comment</MudTd>
          <MudTd DataLabel="Parent">@context.Comment</MudTd>
          <MudTd>
            <MudIconButton Icon="@Icons.Material.Filled.Edit" Size="Size.Small" OnClick="() => EditEntry(context)"></MudIconButton>
          </MudTd>
          <MudTd>
            <MudIconButton Icon="@Icons.Material.Filled.Delete" Size="Size.Small" OnClick="() => DeleteEntry(context.Id)"></MudIconButton>
          </MudTd>
        </RowTemplate>
      </MudTable>

